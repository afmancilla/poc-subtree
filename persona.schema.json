{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persona",
  "type": "object",
  "properties": {
    "nombre": {
      "type": "string"
    },
    "apellido": {
      "type": "string"
    },
    "dni": {
      "type": "string",
      "pattern": "^[0-9]{8}$"
    }
  },
  "required": ["nombre", "apellido", "dni"]
}
